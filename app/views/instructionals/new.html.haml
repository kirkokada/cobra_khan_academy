.row
  .col-md-6.col-md-offset-3
    .list-group-item
      %h3 Submit an Instructional
      = form_for [@topic, @instructional] do |f|
        = render 'shared/error_messages', object: f.object
        .form-group
          = f.label :url
          = f.text_field :url, placeholder: "Currently only youtube urls are supported",
                               class: "form-control"
        = f.submit "Submit", class: "btn btn-success"

